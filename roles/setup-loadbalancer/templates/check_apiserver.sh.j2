#!/bin/sh

errorExit() {
    echo "*** $*" 1>&2
    exit 1
}

curl --silent --max-time 2 --insecure https://localhost:{{ kube_apiserver_port }}/ -o /dev/null || errorExit "Error GET https://localhost:{{ kube_apiserver_port }}/"
if ip addr | grep -q {{ kube_apiserver_name }}; then
    curl --silent --max-time 2 --insecure https://{{ kube_apiserver_name }}:{{ kube_apiserver_port }}/ -o /dev/null || errorExit "Error GET https://{{ kube_apiserver_name }}:{{ kube_apiserver_port }}/"
fi
